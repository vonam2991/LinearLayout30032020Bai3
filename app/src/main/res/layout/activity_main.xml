<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="white"
    android:paddingTop="6dp"
    android:paddingLeft="6dp"
    android:paddingRight="6dp"
    android:paddingBottom="6dp"
    android:weightSum="10"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_weight="2"
        android:background="#100101"
        android:weightSum="3"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/txt1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#EF0505"
                android:gravity="center"
                android:text="1"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="6dp"
                android:layout_marginBottom="3dp"
                android:layout_marginRight="3dp"
                android:textColor="#ffff"
                android:textSize="50sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/txt2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#EFC405"
                android:gravity="center"
                android:text="2"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="3dp"
                android:layout_marginBottom="3dp"
                android:layout_marginRight="6dp"
                android:textColor="#ffff"
                android:textSize="50sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_weight="8"
        android:background="#100101"
        android:weightSum="10"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <LinearLayout
            android:layout_weight="7"
            android:orientation="horizontal"
            android:weightSum="10"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="7"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:weightSum="2"
                    android:layout_weight="7"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">

                    <TextView
                        android:id="@+id/txt3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#05EF2C"
                        android:gravity="center"
                        android:text="3"
                        android:textColor="#ffff"
                        android:layout_weight="1"
                        android:layout_marginTop="2dp"
                        android:layout_marginLeft="6dp"
                        android:layout_marginBottom="3dp"
                        android:layout_marginRight="3dp"
                        android:textSize="50sp" />

                    <TextView
                        android:id="@+id/txt4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#9D05EF"
                        android:gravity="center"
                        android:text="4"
                        android:layout_marginTop="3dp"
                        android:layout_marginLeft="6dp"
                        android:layout_marginBottom="3dp"
                        android:layout_marginRight="3dp"
                        android:textColor="#ffff"
                        android:layout_weight="1"
                        android:textSize="50sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/txt5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#95BBEA"
                    android:gravity="center"
                    android:text="5"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginRight="6dp"
                    android:textColor="#ffff"
                    android:textSize="50sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="3"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <TextView
                android:id="@+id/txt6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#D16868"
                android:gravity="center"
                android:layout_weight="1"
                android:text="6"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="6dp"
                android:layout_marginBottom="6dp"
                android:layout_marginRight="3dp"
                android:textColor="#ffff"
                android:textSize="50sp" />

            <TextView
                android:id="@+id/txt7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#0787CC"
                android:gravity="center"
                android:layout_weight="1"
                android:text="7"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="3dp"
                android:layout_marginBottom="6dp"
                android:layout_marginRight="6dp"
                android:textColor="#ffff"
                android:textSize="50sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>